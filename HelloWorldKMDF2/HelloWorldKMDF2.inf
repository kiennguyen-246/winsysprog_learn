;
; HelloWorldKMDF2.inf
;

[Version]
Signature   = "$WINDOWS NT$"
Class       = System ; TODO: specify appropriate Class
ClassGuid   = {4d36e97d-e325-11ce-bfc1-08002be10318} ; TODO: specify appropriate ClassGuid
Provider    = %ManufacturerName%
CatalogFile = HelloWorldKMDF2.cat
DriverVer   = ; TODO: set DriverVer in stampinf property pages
PnpLockdown = 1

[DestinationDirs]
DefaultDestDir = 13

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
HelloWorldKMDF2.sys = 1,,

;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName% = Standard,NT$ARCH$.10.0...16299 ; %13% support introduced in build 16299

[Standard.NT$ARCH$.10.0...16299]
%HelloWorldKMDF2.DeviceDesc% = HelloWorldKMDF2_Device, Root\HelloWorldKMDF2 ; TODO: edit hw-id

[HelloWorldKMDF2_Device.NT]
CopyFiles = File_Copy

[File_Copy]
HelloWorldKMDF2.sys

;-------------- Service installation
[HelloWorldKMDF2_Device.NT.Services]
AddService = HelloWorldKMDF2,%SPSVCINST_ASSOCSERVICE%, HelloWorldKMDF2_Service_Inst

; -------------- HelloWorldKMDF2 driver install sections
[HelloWorldKMDF2_Service_Inst]
DisplayName    = %HelloWorldKMDF2.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %13%\HelloWorldKMDF2.sys

[HelloWorldKMDF2_Device.NT.Wdf]
KmdfService = HelloWorldKMDF2, HelloWorldKMDF2_wdfsect

[HelloWorldKMDF2_wdfsect]
KmdfLibraryVersion = $KMDFVERSION$

[Strings]
SPSVCINST_ASSOCSERVICE = 0x00000002
ManufacturerName = "<Your manufacturer name>" ;TODO: Replace with your manufacturer name
DiskName = "HelloWorldKMDF2 Installation Disk"
HelloWorldKMDF2.DeviceDesc = "HelloWorldKMDF2 Device"
HelloWorldKMDF2.SVCDESC = "HelloWorldKMDF2 Service"
